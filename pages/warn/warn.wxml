<!--pages/warn/warn.wxml-->
<view class="container">
  <view class="choose">
    <view class="title">请选择故障类型</view>
    <checkbox-group class="grids">
    <block wx:key="{{index}}" wx:for="{{checkBoxList}}">
      <checkbox class="grid"  checked="{{item.checked}}">{{item.title}}</checkbox>
      </block>
    </checkbox-group>
  </view>
  <view class="action">
    <view class="title">拍摄单车周围环境，便于维修师傅找车</view>
    <view class="action-pic">
    <block wx:for="{{pics}}" wx:key="{{index}}">
      <image src = "{{item}}" >
        <icon class="del" data-index = "{{index}}" type="cancel" size='20' bindtap='del'></icon>
      </image>
    </block>
    <text class="add" bindtap='takePic'>{{actionText}}</text>
    </view>
    <view class="action-input">
    <input placeholder='车牌号' bindeinput='changenumber'></input>
    <input placeholder='备注' bindeinput='changedesc'></input>
    <view class="action-sub">
      <button bindtap='submit'>提交</button>
    </view>
    </view>
  </view>
</view>
