.container{
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.userInfo{
  background-color: #fff;
  padding-top: 40rpx;
}
.userInfo image{
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: block;
}
.userInfo view{
  font-size: 32rpx;
  text-align:center;
  padding: 20rpx 0;
}
.wallet{
  display: flex;
  background-color: #fff;
  padding: 40rpx;
  margin-top: 40rpx;
  justify-content: space-between;
  font-size: 32rpx;
}
button{
  position: fixed;
  bottom: 60rpx;
  width: 90%;
  left:5%;
}